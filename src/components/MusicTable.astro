---
import { type Song } from "@/lib/data";

interface Props {
  songs: Song[];
}
const { songs } = Astro.props;
---

<table class="table-auto text-left min-w-full divide-y-2 divide-gray-500/50">
  <thead class="">
    <tr class="text-zinc-400 text-sm">
      <th class="px-4 py-2 font-light">#</th>
      <th class="px-4 py-2 font-light">Title</th>
      <th class="px-4 py-2 font-light">Album</th>
      <th class="px-4 py-2 font-light">Duration</th>
    </tr>
  </thead>
  <tbody>
    {
      songs.map((song, index) => (
        <tr class="text-gray-300 text-sm font-light hover:bg-white/10 transition duration-300">
          <td class="px-4 py-2 w-5">{index + 1}</td>
          <td class="px-4 py-2 flex gap-3">
            <picture class="">
              <img src={song.image} class="w-11 h-11" />
            </picture>
            <div class="flex flex-col">
              <h3>{song.title}</h3>
              <span>{song.artists.join(",")}</span>
            </div>
          </td>
          <td class="px-4 py-2">{song.album}</td>
          <td class="px-4 py-2">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
